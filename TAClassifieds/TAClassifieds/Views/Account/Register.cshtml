@model TAClassifieds.Model.User
@*@{
        ViewBag.Title = "Register";
    }

    <h2>@ViewBag.Title.</h2>*@
<div class="row">
    <div class="logincontainer">
        <h2>Create a new account.</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form-signin form-margin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            
            @*@Html.ValidationSummary()*@
            
            <div class="form-group">
                @Html.Label("Email*", new { @class = "control-label col-sm-4" })                
                <div class="col-sm-6">
                    
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email id" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Password*", new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.PasswordFor(m => m.UPassword, new { @class = "form-control", placeholder = "Enter Password" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Repeat Password", new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.Password("ConfirmPassword",null, new { @class = "form-control", placeholder = "Repeat your password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    <div class="checkbox">
                        @Html.CheckBox("Terms")
                        @Html.Label("I accept all the terms and conditions")
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-12">
                    <input type="submit" class="btn btn-md btn-primary" value="Create" />
                </div>
            </div>
            <div style="text-align:center;color:red">
                @ViewBag.UserExists<br />
                @ViewBag.PwdMatch<br />
                @ViewBag.Email<br />
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
